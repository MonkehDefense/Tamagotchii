<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Pet_View">

    <ProgressBar
        android:id="@+id/bar_happiness"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_row="0"
        android:layout_column="4"
        android:progress="80"
        android:progressBackgroundTint="#FFEB3B"
        android:progressTint="#FFEB3B"
        android:rotation="270"
        android:scaleX="2"
        android:scaleY="3"
        android:layout_columnWeight="1" />

    <ProgressBar
        android:id="@+id/bar_hunger"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_row="0"
        android:layout_column="0"
        android:progress="80"
        android:progressBackgroundTint="#D01A1A"
        android:progressTint="#D11A1A"
        android:rotation="270"
        android:scaleX="2"
        android:scaleY="3"
        android:layout_columnWeight="1" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/pic_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        tools:src="@tools:sample/avatars"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:src="@drawable/spr_4_egg"/>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:text="ImiÄ™"
        android:gravity="center"
        android:layout_columnWeight="1" />

    <ImageButton
        android:id="@+id/pic_poop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="2"
        android:layout_column="3"
        android:scaleType="fitXY"
        android:src="@drawable/poop_"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/pic_exclam"
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/exclm"
        android:scaleType="fitCenter"
        android:layout_columnWeight="1"
        android:background="@null" />

    <ImageButton
        android:id="@+id/pic_zs"
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/comic_effect_zzz"
        android:background="@null"/>

    <ProgressBar
        android:id="@+id/bar_energy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:scaleY="3"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:progressBackgroundTint="#2DC733"
        android:progressTint="#2DC833"
        android:progress="88"/>


</GridLayout>